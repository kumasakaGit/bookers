<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div class="error">
    <h2 class="e-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    </div>
<% end %>

<%= form_with model: @book do |f| %>

<div class="edit">
    <p>Title</p>
    <%= f.text_field :title %>
</div>

<div class="edit">
    <p>Body</p>
    <%= f.text_area :body %>
</div>
<div class="edit">
    <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
